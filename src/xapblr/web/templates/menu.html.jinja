{% macro menuitem(url,text,icon) -%}
<a href="/{{url}}"><i class="fi fi-bs-{{icon}}"></i> {{text}}</a><br />
{%- endmacro -%}
<div id="menu">
    <h1>Menu</h1>

    {{ menuitem("search", "Search", "search-alt") }}
    {{ menuitem("diagnostics", "Diagnostics", "chart-histogram") }}
    {{ menuitem("admin", "Admin panel", "settings-sliders") }}
    {% if config["multi_user"] %}
    <br />
    {{ menuitem("profile", current_user.name, "user") }}
    {{ menuitem("logout", "Log out", "exit") }}
    {% endif %}
</div>
